{
	"name": "@ape-mail/api",
	"version": "0.1.0",
	"private": true,
	"prisma": {
		"schema": "../db/prisma/schema.prisma"
	},
	"scripts": {
		"build:types": "yarn build:deps && tsc --build tsconfig.types.json",
		"build:deps": "yarn workspace @ape-mail/shared build",
		"generate": "nest generate --no-spec resource ",
		"build": "yarn build:deps && tsc --build tsconfig.json",
		"clean": "rimraf dist && rimraf .cache && rimraf tsconfig.tsbuildinfo",
		"prod": "TS_NODE_PROJECT=./tsconfig.prod.json node -r tsconfig-paths/register ./dist/main.js",
		"__dev": "yarn build:deps && ts-node-dev -r tsconfig-paths/register --project ./tsconfig.json --debug --no-notify --respawn --ignore /.yarn/,/dist/,node_modules --transpile-only ./src/main.ts",
		"dev": "nest start --preserveWatchOutput --watch",
		"lint": "eslint \"src/**/*.ts\"",
		"prisma:generate": "prisma generate",
		"lint:fix": "eslint ./src --ext .ts --fix",
		"typecheck": "yarn build"
	},
	"dependencies": {
		"@ape-mail/shared": "workspace:*",
		"@faker-js/faker": "8.4.1",
		"@fastify/cookie": "^9.3.1",
		"@fastify/cors": "^9.0.1",
		"@fastify/multipart": "^8.3.0",
		"@fastify/static": "^7.0.4",
		"@loskir/styled-qr-code-node": "^1.5.1",
		"@nestjs/common": "^10.3.8",
		"@nestjs/core": "^10.3.8",
		"@nestjs/jwt": "^10.2.0",
		"@nestjs/passport": "^10.0.3",
		"@nestjs/platform-fastify": "^10.3.9",
		"@nestjs/serve-static": "^4.0.2",
		"@prisma/client": "^5.15.0",
		"@trpc/server": "^10.45.1",
		"app": "link:./src/app",
		"axios": "^1.6.8",
		"bcrypt": "^5.1.1",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.1",
		"const": "link:./src/const",
		"dayjs": "^1.11.11",
		"dotenv": "^16.4.5",
		"fastify": "^4.28.0",
		"fix-esm": "^1.0.1",
		"lodash": "^4.17.21",
		"modules": "link:./src/modules",
		"passport": "^0.7.0",
		"passport-jwt": "^4.0.1",
		"passport-local": "^1.0.0",
		"prisma": "^5.15.0",
		"reflect-metadata": "^0.2.2",
		"rxjs": "^7.8.1",
		"source-map-support": "^0.5.21",
		"superjson": "^2.2.1",
		"trcp": "link:./src/trcp",
		"tsconfig-paths": "^4.2.0",
		"tsup": "^8.0.2",
		"utils": "link:./src/utils",
		"uuid": "^10.0.0",
		"xml-formatter": "^3.6.2",
		"zod": "^3.22.4"
	},
	"devDependencies": {
		"@nestjs/cli": "^10.3.2",
		"@nestjs/schematics": "^10.1.1",
		"@types/bcrypt": "^5.0.2",
		"@types/lodash": "^4.17.0",
		"@types/multer": "^1.4.11",
		"@types/node": "^18.19.31",
		"@types/passport": "^1.0.16",
		"@types/passport-jwt": "^4.0.1",
		"@types/passport-local": "^1.0.38",
		"@types/source-map-support": "^0.5.10",
		"@types/uuid": "^9.0.8",
		"eslint": "^8.56.0",
		"rimraf": "^5.0.5",
		"ts-node": "10.9.2",
		"ts-node-dev": "2.0.0",
		"typescript": "^5.3.3"
	}
}
