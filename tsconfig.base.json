{
	"exclude": [".yarn/*", "**/node_modules", "**/dist"],
	"include": [
		"./packages/@types",
	],
	"compilerOptions": {
		"types": [
			"node",
			// "jest"
		],
		"useUnknownInCatchVariables": false,
		"incremental": true,
		"target": "ES2019",
		"module": "CommonJS",
		"skipLibCheck": true,
		"allowJs": true,
		"checkJs": false,
		"jsx": "react",
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"rootDir": "./packages",
		"composite": true,
		"removeComments": true,
		"downlevelIteration": true,
		"isolatedModules": false,
		"strict": true,
		"preserveWatchOutput": true,
		"moduleResolution": "node",
		"baseUrl": ".",
		"paths": {
			"@ape-mail/*": ["./packages/*/src"]
		},
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"resolveJsonModule": true
	}
}